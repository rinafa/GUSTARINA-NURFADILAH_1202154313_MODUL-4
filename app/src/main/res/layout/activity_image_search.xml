<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="si3901.rinafdlh.gustarinanurfadilah_1202154313_si3901.ImageSearch">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cari Gambar"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textAlignment="center"
        android:layout_marginTop="50dp"/>
    <EditText
        android:id="@+id/etImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan URL gambar"
        android:inputType="textUri"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Klik untuk mencari gambar"
        android:onClick="imgOnClick"
        android:textColor="@android:color/black"
        android:background="@color/colorAccent"/>
    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
